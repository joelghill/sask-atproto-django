    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Log Feed",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "start_feed",
                "wss://bsky.network/xrpc",
                "--algorithm=logger"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python: Index Feed",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "start_feed"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python: labeler",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "start_labeler",
                "--reset"
            ],
            "django": true,
            "justMyCode": false
        }
    ]
}